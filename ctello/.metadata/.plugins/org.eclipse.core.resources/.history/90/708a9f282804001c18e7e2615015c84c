#include "SDL_gfx.h"

SDL_gfx::SDL_gfx()
{

	m_window = SDL_CreateWindow( "SDL Tutorial", SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, SCREEN_WIDTH, SCREEN_HEIGHT, SDL_WINDOW_SHOWN );
	if (NULL == window)
	{
		printf("Window could not be created. SDL_Error: %s\n", SDL_GetError());
		fflush(stdout);
		exit(1);
	}
	else
		m_surface = SDL_GetWindowSurface(window);
}

SDL_gfx::~SDL_gfx()
{
	SDL_DestroyWindow(m_window);

}

int SDL_gfx::drawWhiteBackground()
{
	SDL_FillRect(screenSurface, NULL, SDL_MapRGB(m_surface->format, 0xFF, 0xFF, 0xFF));
}

int SDL_gfx::finishFrame()
{
	SDL_UpdateWindowSurface(m_window);
	SDL_Delay(2000);
}
