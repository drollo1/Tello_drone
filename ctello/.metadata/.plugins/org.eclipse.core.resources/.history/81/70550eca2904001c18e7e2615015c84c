#include "SDL_gfx.h"

SDL_display::SDL_display()
{

	m_window = SDL_CreateWindow( "SDL Tutorial", SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, SCREEN_WIDTH, SCREEN_HEIGHT, SDL_WINDOW_SHOWN );
	if (NULL == m_window)
	{
		printf("Window could not be created. SDL_Error: %s\n", SDL_GetError());
		fflush(stdout);
		exit(1);
	}
	else
		m_surface = SDL_GetWindowSurface(m_window);
}

SDL_display::~SDL_display()
{
	SDL_DestroyWindow(m_window);
}

int SDL_display::drawWhiteBackground()
{
	SDL_FillRect(m_surface, NULL, SDL_MapRGB(m_surface->format, 0xFF, 0xFF, 0xFF));
	return 1;
}

int SDL_display::finishFrame()
{
	SDL_UpdateWindowSurface(m_window);
	SDL_Delay(2000);
	return 1;
}
